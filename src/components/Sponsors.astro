---
import ArcLogo from './logos/Arc.astro'
import AlgoliaLogo from './logos/Algolia.astro'
import TwilioLogo from './logos/Twilio.astro'
import RapidLogo from './logos/Rapid.astro'
---

<div class='w-full'>
  <svg class="fill-current text-blue-50" viewBox="0 0 900 45" xmlns="http://www.w3.org/2000/svg">
    <path d="m0 4 50 3c50 3 150 9 250 13.7 100 4.6 200 8 300 4.3S800 10.7 850 5.3L900 0v45H0V4Z"
      fill-rule="nonzero"></path>
  </svg>

  <div class='w-full bg-gradient-to-b from-blue-50 to-blue-100 text-blue-700 py-8'>
    <h4 class='font-medium text-blue-700 text-center uppercase'>Patrocinadores de los retos</h4>
    <div class='flex items-center w-full justify-center gap-12 py-8'>
      <ArcLogo />
      <AlgoliaLogo />
      <TwilioLogo />
      <RapidLogo />
    </div>
  </div>

  <svg class="fill-current text-blue-100 rotate-180 -mt-1" viewBox="0 0 900 45" xmlns="http://www.w3.org/2000/svg">
    <path d="m0 4 50 3c50 3 150 9 250 13.7 100 4.6 200 8 300 4.3S800 10.7 850 5.3L900 0v45H0V4Z"
      fill-rule="nonzero"></path>
  </svg>
</div>